<h1>Valorant Roster</h1>

<% if logged_in? %>
    <h2><%= current_user['name'] %></h2>

    <form action="/sessions" method="POST">
        <input type="hidden" name="_method" value="delete">

        <button>Log Out</button>
    </form>

    <h1>Agents</h1>

<% else %>
    <a href="/sign_up">Sign up</a>
    <a href="/login">Sign in</a>

    <h1>Agents</h1>
    
    <% val_agents.each do |agent| %>
        <div class="agent_button">
            <h2><%= agent['name'] %></h2>
            <a href="#"><img class="agent-img" src="<%= agent['image_url'] %>" alt="icon.png"></a>
        </div>

        <% agent_notes.each do |note| %>
            <% if note['agent_id'] == agent['id'] %>
                <% if note['notes'] == nil %>
                    <a href="/add_note?note_id=<%= note['id'] %>">Add note</a>
                <% else %>
                    <p><strong>Note: </strong><%= note['notes'] %></p>
                    <p><strong>Tier List: </strong><%= note['tier'] %></p>

                    <a href="/note/<%= note['id'] %>/edit">Edit</a>

                    <form action="/note/<%= note['id'] %>" method="POST">
                        <input type="hidden" name="_method" value="delete">

                        <button>Delete</button>
                    </form
                <% end %>

            <% end %>

        <% end %>

    <% end %>
    
<% end %>
