<div class="homepage-bg">
    <video autoplay muted loop id="bg-video">
    <source src="https://assets.contentstack.io/v3/assets/bltb6530b271fddd0b1/blt29d7c4f6bc077e9e/5eb26f54402b8b4d13a56656/agent-background-generic.mp4" type="video/mp4">
    </video>
</div>

<div class="add-note-profile">

    <h2 class="agent-name"><%= agent['name'] %></h2>

    <img src="<%= agent['full_portrait'] %>" alt="">
    <div class="agent-profile">
        <p class="role-title">// Role</p> 
        <p class="role-name"><%= agent['role'] %></p> 
        <p class="desc-title">// Biography</p>
        <p class="desc"><%= agent['description'] %></p> 
        <audio src="<%= agent['voiceline'] %>" controls>
        Your browser does not support the audio tag.
        </audio> 
    </div>
</div>

<div class="add-note-section">
    <h1 class="agent-note-title">Agent Notes</h1>

    <form class="add-note-form" action="/note" method="POST">
        <input type="hidden" name="_method" value="put">
        <input type="hidden" name="note_id" value="<%= note_id %>">

        <label for="">Note</label>
        <textarea name="note" class="add-note-input" rows="5" cols="10" wrap="soft"></textarea>

        <label for="">Tier List</label>
        <input type="text" name="tier">

        <button class="add-note-button">â†’</button>
    </form>
</div>